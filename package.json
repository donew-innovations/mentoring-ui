{
	"name": "@donew/mentoring-ui",
	"version": "0.0.0",
	"description": "The frontend for the DoNew Mentoring API",
	"author": {
		"name": "Vedant K",
		"url": "https://github.com/gamemaker1"
	},
	"type": "module",
	"scripts": {
		"clean": "del-cli public/dist/ coverage/ tests/assets/ .nyc_output/ *.log",
		"start": "cd tests/mocks/api && pnpm firebase emulators:exec --project donew-mentoring-api-sandbox \"cd ../../.. && serve public/\"",
		"develop": "run-p watch start",
		"format:code": "xo --fix {source,test}/**/*.ts",
		"format:rest": "prettier --write --ignore-path config/prettier/ignore .",
		"format": "run-s format:*",
		"lint:code": "xo {source,test}/**/*.ts",
		"lint:rest": "prettier --check --ignore-path config/prettier/ignore .",
		"lint": "run-s lint:*",
		"build:tsp": "tsup",
		"build:cov": "tsup && nyc instrument --in-place public/dist",
		"compile": "run-s clean build:tsp",
		"watch:tsp": "tsup --watch",
		"watch:web": "start-test http-get://localhost:3000/index.html cypress:open",
		"watch": "run-p watch:*",
		"test:tsc": "tsc --project config/tsconfig.json",
		"test:web": "start-test http-get://localhost:3000/index.html cypress:run",
		"test": "run-s compile lint test:*",
		"cypress:run": "cypress run --config-file config/cypress/config.json",
		"cypress:open": "cypress open --config-file config/cypress/config.json",
		"view:cov:txt": "nyc report --reporter=text",
		"view:cov:web": "serve coverage/lcov-report/",
		"deploy:prd": "firebase deploy --only hosting --project donew-mentoring-api",
		"deploy:dev": "firebase deploy --only hosting --project donew-mentoring-api-sandbox",
		"deploy": "run-s deploy:*",
		"hooks:husky": "husky install config/husky",
		"hooks:api": "git submodule update --init tests/mocks/api && cd tests/mocks/api && pnpm install --ignore-scripts && pnpm compile && cd ../../..",
		"hooks": "run-s hooks:*",
		"prepare": "bash -c \"[[ -z \\\"$FIREBASE_DEPLOY\\\" ]] && pnpm run-s compile hooks || true\""
	},
	"engines": {
		"node": "16",
		"pnpm": "6"
	},
	"devDependencies": {
		"@cypress/code-coverage": "3.9.12",
		"commitizen": "4.2.4",
		"cypress": "9.5.0",
		"cz-conventional-changelog": "3.3.0",
		"del-cli": "4.0.1",
		"firebase-tools": "10.2.1",
		"husky": "7.0.4",
		"lint-staged": "12.3.4",
		"npm-run-all": "4.1.5",
		"nyc": "15.1.0",
		"prettier": "2.5.1",
		"serve": "13.0.2",
		"start-server-and-test": "1.14.0",
		"tsup": "5.11.13",
		"typescript": "4.5.5",
		"xo": "0.48.0"
	},
	"tsup": {
		"entry": [
			"source/**/*.ts"
		],
		"format": [
			"esm"
		],
		"target": "esnext",
		"tsconfig": "config/tsconfig.json",
		"outDir": "public/dist/"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"@typescript-eslint/no-empty-function": 0,
			"@typescript-eslint/no-confusing-void-expression": 0,
			"@typescript-eslint/no-unsafe-assignment": 0,
			"@typescript-eslint/no-unsafe-call": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"import/no-unassigned-import": 0,
			"no-await-in-loop": 0,
			"capitalized-comments": 0
		},
		"parserOptions": {
			"project": "config/tsconfig.json"
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"endOfLine": "lf",
		"printWidth": 90
	},
	"lint-staged": {
		"{source,tests}/**/*.ts": "xo --fix",
		"**/*.{md,json,yaml,html}": "prettier --write"
	}
}
