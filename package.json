{
	"name": "@donew/mentoring-ui",
	"version": "0.0.0",
	"description": "The frontend for the DoNew Mentoring API",
	"author": {
		"name": "Vedant K",
		"url": "https://github.com/gamemaker1"
	},
	"type": "module",
	"scripts": {
		"clean": "del-cli public/dist/ coverage/ tests/assets/ .nyc_output/ *.log",
		"start": "cd tests/mocks/api && pnpm firebase emulators:exec --ui --project donew-mentoring-api-sandbox \"cd ../../.. && serve public/\"",
		"develop": "run-p watch start",
		"format:code": "xo --fix source/**/*.ts",
		"format:rest": "prettier --write --ignore-path config/prettier/ignore .",
		"format": "run-s format:*",
		"lint:code": "xo source/**/*.ts",
		"lint:rest": "prettier --check --ignore-path config/prettier/ignore .",
		"lint": "run-s lint:*",
		"build:app": "esbuild $(esbuild-config)",
		"build:css": "tailwindcss --input public/main.css --output public/dist/main.css --config config/tailwind/config.cjs",
		"compile": "run-s clean build:*",
		"watch:build": "run-p 'build:* -- --watch'",
		"watch:tests": "start-test http-get://localhost:3000/index.html cypress:open",
		"watch": "run-p watch:*",
		"test:tsc": "tsc",
		"test:app": "start-test http-get://localhost:3000/index.html cypress:run",
		"test": "run-s compile lint test:*",
		"cypress:run": "cypress run --config-file config/cypress/config.json",
		"cypress:open": "cypress open --config-file config/cypress/config.json",
		"deploy:prd": "firebase deploy --only hosting --project donew-mentoring-api",
		"deploy:dev": "firebase deploy --only hosting --project donew-mentoring-api-sandbox",
		"deploy": "run-s deploy:*",
		"hooks:husky": "husky install config/husky",
		"hooks:api": "git submodule update --init tests/mocks/api && cd tests/mocks/api && git fetch && git checkout trunk && git rebase && pnpm install --ignore-scripts && pnpm compile && cd ../../..",
		"hooks": "run-s hooks:*",
		"prepare": "bash -c \"[[ -z \\\"$FIREBASE_DEPLOY\\\" ]] && pnpm run-s compile hooks || true\""
	},
	"engines": {
		"node": "16",
		"pnpm": "6"
	},
	"dependencies": {
		"ky": "0.30.0",
		"nanoid": "3.3.3",
		"select-dom": "7.1.1",
		"umbrellajs": "3.3.1"
	},
	"devDependencies": {
		"@cypress/code-coverage": "3.9.12",
		"@faker-js/faker": "6.1.2",
		"commitizen": "4.2.4",
		"cypress": "9.5.4",
		"cz-conventional-changelog": "3.3.0",
		"del-cli": "4.0.1",
		"esbuild": "0.14.36",
		"esbuild-config": "0.2.0",
		"firebase-tools": "10.7.0",
		"husky": "7.0.4",
		"lint-staged": "12.4.0",
		"npm-run-all": "4.1.5",
		"nyc": "15.1.0",
		"prettier": "2.6.2",
		"serve": "13.0.2",
		"start-server-and-test": "1.14.0",
		"tailwindcss": "3.0.24",
		"typescript": "4.6.3",
		"xo": "0.48.0"
	},
	"esbuild": {
		"bundle": true,
		"target": "esnext",
		"format": "esm",
		"outdir": "public/dist/",
		"entry": [
			"source/hooks/index.ts",
			"source/pages/**/*.ts"
		]
	},
	"xo": {
		"prettier": true,
		"rules": {
			"@typescript-eslint/no-empty-function": 0,
			"@typescript-eslint/no-confusing-void-expression": 0,
			"@typescript-eslint/no-unsafe-assignment": 0,
			"@typescript-eslint/no-unsafe-call": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"import/no-unassigned-import": 0,
			"no-await-in-loop": 0,
			"capitalized-comments": 0
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"endOfLine": "lf",
		"printWidth": 90
	},
	"lint-staged": {
		"source/**/*.ts": "xo --fix",
		"**/*.{md,json,yaml,html}": "prettier --write"
	}
}
