{
	"name": "@donew/mentoring-ui",
	"version": "0.0.0",
	"description": "The frontend for the DoNew Mentoring API",
	"author": {
		"name": "Vedant K",
		"url": "https://github.com/gamemaker1"
	},
	"type": "module",
	"scripts": {
		"clean": "del-cli public/dist/ *.log",
		"build": "tsup",
		"watch": "tsup --watch",
		"compile": "run-s clean build",
		"start": "serve public/",
		"develop": "run-p watch start",
		"lint": "xo source/**/*.ts",
		"format": "xo --fix source/**/*.ts",
		"test:tsc": "tsc --project config/tsconfig.json",
		"test": "run-s compile lint test:*"
	},
	"engines": {
		"node": "16",
		"pnpm": "6"
	},
	"devDependencies": {
		"del-cli": "4.0.1",
		"husky": "7.0.4",
		"lint-staged": "12.3.4",
		"npm-run-all": "4.1.5",
		"serve": "13.0.2",
		"tsup": "5.11.13",
		"typescript": "4.5.5",
		"xo": "0.48.0"
	},
	"tsup": {
		"entry": [
			"source/**/*.ts"
		],
		"format": [
			"esm"
		],
		"target": "esnext",
		"tsconfig": "config/tsconfig.json",
		"outDir": "public/dist/"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"@typescript-eslint/no-empty-function": 0,
			"@typescript-eslint/no-confusing-void-expression": 0,
			"@typescript-eslint/no-unsafe-assignment": 0,
			"@typescript-eslint/no-unsafe-call": 0,
			"@typescript-eslint/restrict-template-expressions": 0,
			"import/no-unassigned-import": 0,
			"no-await-in-loop": 0
		},
		"parserOptions": {
			"project": "config/tsconfig.json"
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"endOfLine": "lf",
		"printWidth": 90
	},
	"lint-staged": {
		"source/**/*.ts": "xo --fix"
	}
}
